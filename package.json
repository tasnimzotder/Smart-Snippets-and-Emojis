{
  "name": "lightning-snippets",
  "displayName": "Lightning Snippets",
  "description": "",
  "version": "1.0.2",
  "publisher": "tasnimzotder",
  "author": {
    "name": "Tasnim Zotder"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tasnimzotder/lightning-snippets.git"
  },
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "python",
    "cpp",
    "snippets",
    "emoji"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "cpp",
        "path": "./snippets/cpp-snippets.code-snippets"
      },
      {
        "language": "python",
        "path": "./snippets/py-snippets.code-snippets"
      },
      {
        "language": "markdown",
        "path": "./snippets/md-snippets.code-snippets"
      },
      {
        "path": "./snippets/emoji-snippets.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "lightning-snippets.helloWorld",
        "title": "Lightning Snippets: Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "__metadata": {
    "publisherDisplayName": "Tasnim Zotder"
  }
}
